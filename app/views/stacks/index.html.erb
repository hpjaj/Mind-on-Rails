<div class="container-fluid">

<% if stacks_1_to_4 %>
  <div class="row">
    <% stacks_1_to_4.each do |stack| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="black-box">
          <p class="stack-titles"><%= link_to stack.title, stack %></p>
          <div class="stack-bodies">
            <div class="stack-headlines"><%= stack.headline %></div> 
            <div class="stack-descriptions"><%= truncate( (stack.description), length: 100 ) %></div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

