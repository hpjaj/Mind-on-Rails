<%= simple_form_for @note do |f|  %>
  <div class="container">
    <div class="row form placeholder-text">
 
      <div class="col-sm-9 col-sm-push-3 note-padding">
        <div class="note-form-columns">
          <div class="row form-group ">
            <%= f.input :title, label: false, placeholder: ":title", input_html: { id: "note-form-title-field", class: "form-control note-form-fields" } %>
          </div>
          <div class="row form-group ">
            <%= f.input :body, label: false, placeholder: ":body", input_html: { id: "note-form-body-field", class: "form-control note-form-fields", rows: 21 } %>
          </div>
        </div>
      </div>

      <div class="col-sm-3 col-sm-pull-9 note-padding">
        <div class="note-form-columns">
          <div class="row" id="stacks-form">
            <p>Choose all that apply</p>
            <%= f.association :stacks, as: :check_boxes, label: false %>
          </div>
        </div>
      </div>

    </div>
    
    <nav class="navbar navbar-inverse navbar-fixed-bottom" id="bottom-navbar" role="navigation">
      <div class="container">
        <ul class="nav nav-pills">
          <li ><%= button_to 'Cancel', :back, class: "note-bottom-nav-buttons" %></li>
          <!-- <li><%= button_to 'Preview', '#', class: "note-bottom-nav-buttons" %></li> -->
          <li class="pull-right"><%= f.button :submit, 'Save', class: "note-bottom-nav-buttons", id: "note-save-button" %></li>
        </ul>
      </div>
    </nav>

  </div>
<% end %>