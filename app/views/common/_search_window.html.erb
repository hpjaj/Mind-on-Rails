<div class="container" id="search-window">
  <div class="row">
    <div>
      <%= form_tag search_path, method: :get do %>
        <div class="input-group input-group-lg">
          <%= text_field_tag :query, params[:query], placeholder: "Pick your brain", class: "form-control input-lg" %>
          <span class="input-group-btn">
            <button type="submit" class="btn search-button">
              <span class="glyphicon glyphicon-search glyphicon-font-color"></span>
            </button>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>

